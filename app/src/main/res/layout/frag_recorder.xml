<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/constraintLayout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".FragmentRecorder">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clipToPadding="false"
		android:fillViewport="false"
		tools:layout_editor_absoluteX="0dp"
		tools:layout_editor_absoluteY="0dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textView13"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_file_name"
				android:textAppearance="@style/TextAppearance.AppCompat" />

			<EditText
				android:id="@+id/frecEtFileName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ems="10"
				android:gravity="center"
				android:hint="file name"
				android:inputType="textPersonName"
				android:text="test" />

			<TextView
				android:id="@+id/textView15"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_empty"
				android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

			<TextView
				android:id="@+id/textView7"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_channels"
				android:textAppearance="@style/TextAppearance.AppCompat" />

			<Spinner
				android:id="@+id/frecSbChannels"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:entries="@array/audioChannels" />

			<TextView
				android:id="@+id/textView16"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_empty"
				android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

			<TextView
				android:id="@+id/textView11"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_sample_rate"
				android:textAppearance="@style/TextAppearance.AppCompat" />

			<Spinner
				android:id="@+id/frecSbSampleRate"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:entries="@array/sampleRates" />

			<TextView
				android:id="@+id/textView14"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_empty"
				android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

			<TextView
				android:id="@+id/textView9"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_time_source"
				android:textAppearance="@style/TextAppearance.AppCompat" />

			<Spinner
				android:id="@+id/frecSbTimeSource"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:entries="@array/timeSources"
				android:gravity="center" />

			<TextView
				android:id="@+id/textView18"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_empty"
				android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

			<TextView
				android:id="@+id/textView6"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_sound_source"
				android:textAppearance="@style/TextAppearance.AppCompat" />

			<Spinner
				android:id="@+id/frecSbSoundSource"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:entries="@array/audioSources"
				android:gravity="center" />

			<TextView
				android:id="@+id/textView19"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_empty"
				android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

			<TextView
				android:id="@+id/textView10"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_output_format"
				android:textAppearance="@style/TextAppearance.AppCompat" />

			<Spinner
				android:id="@+id/frecSbAudioFormat"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:entries="@array/audioFormat" />

			<TextView
				android:id="@+id/frecTwRecordTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal|top"
				android:layout_margin="10dp"
				android:background="@color/yellow"
				android:gravity="center"
				android:padding="15dp"
				android:text="@string/time_init_text"
				android:textSize="30sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/textView20"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_empty"
				android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

			<ToggleButton
				android:id="@+id/frecTbtnSetTime"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:checked="false"
				android:text="Set time"
				android:textOff="@string/schudOff"
				android:textOn="@string/schudOn" />

			<TextView
				android:id="@+id/textView21"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/lbl_empty"
				android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

			<ToggleButton
				android:id="@+id/frecTbtnRecord"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="ToggleButton"
				android:textOff="@string/lbl_record_off"
				android:textOn="@string/lbl_record_on" />

		</LinearLayout>
	</ScrollView>
</android.support.constraint.ConstraintLayout>